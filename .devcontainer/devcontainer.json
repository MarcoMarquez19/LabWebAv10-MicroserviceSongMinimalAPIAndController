{
  "name": "blazor-microservices-dev",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-dotnettools.csharp",
        "ms-azuretools.vscode-docker",
        "ms-python.python",
        "eamodio.gitlens",
        "esbenp.prettier-vscode",
        "ms-mssql.mssql"
      ]
    }
  },
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {}
  },
  "forwardPorts": [
    5000,
    5001,
    1433,
    15672
  ],
  "postCreateCommand": "dotnet workload install wasm-tools",
  "remoteEnv": {
    "SQL_SERVER_HOST": "localhost",
    "SQL_SERVER_USER": "sa",
    "SQL_SERVER_PASSWORD": "your_strong_password_123!",
    "SQL_SERVER_DATABASE": "galeria_arte_usuariosdb",
    "ConnectionStrings__DefaultConnection": "Server=localhost;Database=galeria_arte_usuariosdb;User Id=sa;Password=your_strong_password_123!;TrustServerCertificate=true;"
  }
}
